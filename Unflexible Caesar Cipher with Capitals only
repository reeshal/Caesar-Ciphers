#include <iostream>
#include <string>
using namespace std;
int main(){
    string text;
    string alpha="ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    cout<<"Input a text:";
    getline(cin, text);
    for(int i=0;i<text.size(); i++){
        if(text.at(i)==32){
            cout<<" ";
        }
        else{
            for(int j=0; j<alpha.size(); j++){
                if(text.at(i)==alpha.at(j)){
                    cout<<alpha.at((j+3)%26);
                }
            }
        }
    }
}
